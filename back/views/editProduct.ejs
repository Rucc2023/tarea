+<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Product</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1 class="mt-5">Edit Product</h1>
        <form action="/product/editProduct/<%= idp %>" method="POST" class="mt-4"> <!-- Usa el ID del producto -->
            <div class="form-group">
                <label for="name">Product Name</label>
                <input type="text" class="form-control" id="name" name="name" value="<%= row.name_p %>" required> <!-- Muestra el nombre actual -->
            </div>
            <div class="form-group">
                <label for="price">Product Price</label>
                <input type="number" class="form-control" id="price" name="price" value="<%= row.price %>" required> <!-- Muestra el precio actual -->
            </div>
            <div class="form-group">
                <label for="category">Category</label>
                <select class="form-control" id="category" name="category" required>
                    <% rows.forEach(function(category) { %>
                        <option value="<%= category.idc %>" <%= category.idc === row.category ? 'selected' : '' %>><%= category.name_c %></option> <!-- Marca la categorÃ­a actual -->
                    <% }); %>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Update Product</button>
        </form>
    </div>
</body>
</html>
